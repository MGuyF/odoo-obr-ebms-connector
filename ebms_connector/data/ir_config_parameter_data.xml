<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- ====================================================== -->
        <!--         Paramètres de Configuration EBMS Connector         -->
        <!-- ====================================================== -->

        <!-- URL de l'API pour l'envoi des factures -->
        <!-- Pour la démo, on pointe vers notre propre contrôleur. -->
        <record id="ebms_api_url" model="ir.config_parameter">
            <field name="key">ebms.api_url</field>
            <field name="value">http://localhost:8069/ebms/demo/send_invoice</field>
        </record>

        <!-- URL pour l'annulation des factures (non utilisée par la démo pour l'instant) -->
        <record id="ebms_cancel_url" model="ir.config_parameter">
            <field name="key">ebms.cancel_url</field>
            <field name="value">REMPLACER_PAR_VRAIE_URL_ANNULATION</field>
        </record>

        <!-- URL pour la vérification du NIF (non utilisée par la démo pour l'instant) -->
        <record id="ebms_nif_check_url" model="ir.config_parameter">
            <field name="key">ebms.nif_check_url</field>
            <field name="value">REMPLACER_PAR_VRAIE_URL_NIF</field>
        </record>

        <!-- Token d'authentification pour l'API -->
        <record id="ebms_api_token" model="ir.config_parameter">
            <field name="key">ebms.api_token</field>
            <field name="value">DEMO_TOKEN</field>
        </record>

        <!-- Clé publique de l'OBR pour la vérification de signature -->
        <!-- Laissez vide par défaut, à remplir par l'administrateur. -->
        <record id="ebms_public_key" model="ir.config_parameter">
            <field name="key">ebms.public_key</field>
            <field name="value"></field>
        </record>

    </data>
</odoo>
