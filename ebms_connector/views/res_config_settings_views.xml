<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_ebms" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.ebms</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='invoicing_settings']" position="after">
                <block title="EBMS Connector" id="ebms_connector_settings">
                    <setting string="EBMS API Settings" help="Configure the connection to the EBMS API.">
                        <div class="content-group">
                            <div class="row mt16">
                                <label for="ebms_api_url" class="col-lg-3 o_light_label"/>
                                <field name="ebms_api_url"/>
                            </div>
                            <div class="row mt16">
                                <label for="ebms_cancel_url" class="col-lg-3 o_light_label"/>
                                <field name="ebms_cancel_url"/>
                            </div>
                            <div class="row mt16">
                                <label for="ebms_nif_check_url" class="col-lg-3 o_light_label"/>
                                <field name="ebms_nif_check_url"/>
                            </div>
                            <div class="row mt16">
                                <label for="ebms_api_token" class="col-lg-3 o_light_label"/>
                                <field name="ebms_api_token" password="True"/>
                            </div>
                            <div class="row mt16">
                                <label for="ebms_public_key" class="col-lg-3 o_light_label"/>
                                <field name="ebms_public_key"/>
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
